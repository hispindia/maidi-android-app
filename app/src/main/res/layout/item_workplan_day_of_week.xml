<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_workplan_day_of_week_ll_content"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:gravity="center_vertical"
              android:paddingLeft="28.8dp"
              android:paddingRight="25.3dp">

    <TextView
            android:id="@+id/item_workplan_day_of_week_tv_day_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15.4dp"
            android:textColor="@color/black"
            fontPath="fonts/NunitoSans-Bold.ttf"
    />

    <TextView
            android:id="@+id/item_workplan_day_of_week_tv_plan_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15.4dp"
            android:textColor="@color/black"
            android:gravity="center"
    />

    <TextView
            android:id="@+id/item_workplan_day_of_week_tv_village"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15.4dp"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:singleLine="true"
    />

</LinearLayout>