<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:paddingLeft="28dp"
              android:paddingRight="28dp"
              android:background="@android:color/white">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAIDI"
            android:textSize="35dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/dark_blue"
            fontPath="fonts/NunitoSans-Bold.ttf"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/otp_instructions"
            android:textColor="@color/dark_blue"
            android:textSize="13.4dp"
            fontPath="fonts/NunitoSans-Bold.ttf"
            android:layout_marginTop="82dp"
            android:gravity="center"

    />

    <View android:layout_width="match_parent" android:layout_height="19.2dp"/>

    <LinearLayout
            android:id="@+id/fragment_login_input_otp_ll_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
    >
        <ImageView
                android:layout_width="15.4dp"
                android:layout_height="15.4dp"
                android:src="@drawable/ic_info"
                android:tint="@color/red"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invalid_otp"
                android:textSize="13.4dp"
                android:textColor="@color/red"
                fontPath="fonts/NunitoSans-Bold.ttf"
                android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <FrameLayout android:layout_width="match_parent" android:layout_height="47dp">

        <EditText
                android:id="@+id/fragment_login_input_otp_et_otp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLength="6"
                android:inputType="number"
                android:cursorVisible="false"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

            <TextView
                    android:id="@+id/fragment_login_input_otp_tv_dot_1"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:text=""
                    android:textSize="21.1dp"
                    android:gravity="center"
                    android:background="@drawable/round_button_gray_gray_stroke"
                    fontPath="fonts/NunitoSans-Bold.ttf"
                    android:padding="0dp"
            />

            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

            <TextView
                    android:id="@+id/fragment_login_input_otp_tv_dot_2"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:text=""
                    android:textSize="21.1dp"
                    android:gravity="center"
                    android:background="@drawable/round_button_gray_gray_stroke"
                    fontPath="fonts/NunitoSans-Bold.ttf"
                    android:padding="0dp"
            />

            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

            <TextView
                    android:id="@+id/fragment_login_input_otp_tv_dot_3"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:text=""
                    android:textSize="21.1dp"
                    android:gravity="center"
                    android:background="@drawable/round_button_gray_gray_stroke"
                    fontPath="fonts/NunitoSans-Bold.ttf"
                    android:padding="0dp"
            />

            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

            <TextView
                    android:id="@+id/fragment_login_input_otp_tv_dot_4"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:text=""
                    android:textSize="21.1dp"
                    android:gravity="center"
                    android:background="@drawable/round_button_gray_gray_stroke"
                    fontPath="fonts/NunitoSans-Bold.ttf"
                    android:padding="0dp"
            />

            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

            <TextView
                    android:id="@+id/fragment_login_input_otp_tv_dot_5"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:text=""
                    android:textSize="21.1dp"
                    android:gravity="center"
                    android:background="@drawable/round_button_gray_gray_stroke"
                    fontPath="fonts/NunitoSans-Bold.ttf"
                    android:padding="0dp"
            />

            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

            <TextView
                    android:id="@+id/fragment_login_input_otp_tv_dot_6"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:text=""
                    android:textSize="21.1dp"
                    android:gravity="center"
                    android:background="@drawable/round_button_gray_gray_stroke"
                    fontPath="fonts/NunitoSans-Bold.ttf"
                    android:padding="0dp"
            />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8.2dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/didt_get_otp"
                android:textSize="13.4dp"
                fontPath="fonts/NunitoSans-Bold.ttf"
        />

        <TextView
                android:id="@+id/fragment_login_input_otp_btn_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_otp"
                android:textSize="13.4dp"
                android:textColor="@color/dark_blue"
                fontPath="fonts/NunitoSans-Bold.ttf"
                android:padding="10dp"
        />

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="50dp"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/fragment_login_input_otp_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@android:color/white"
                android:background="@drawable/button_blue_selector"
                fontPath="fonts/NunitoSans-Bold.ttf"
        />

    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

</LinearLayout>