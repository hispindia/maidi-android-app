<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout android:id="@+id/item_registered_cases_ll_header"
                  android:layout_width="match_parent"
                  android:layout_height="61.4dp"
                  android:orientation="horizontal">

        <TextView
                android:id="@+id/item_registered_cases_tv_counter"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:textSize="15.4dp"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        <TextView
                android:id="@+id/item_registered_cases_tv_child_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textSize="15.4dp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:singleLine="true"
                fontPath="fonts/NunitoSans-Bold.ttf"/>

        <TextView
                android:id="@+id/item_registered_cases_tv_dob"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textAllCaps="true"
                android:textSize="15.4dp"
                android:textColor="@android:color/black"
                android:gravity="end|center_vertical"
                android:paddingRight="28.8dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/item_registered_cases_ll_child_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="28.8dp"
                android:paddingRight="28.8dp"
                android:background="@color/light_gray_background_color">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_id"/>

            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

            <TextView
                    android:id="@+id/item_registered_cases_tv_reg_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="28.8dp"
                android:paddingRight="28.8dp"
                android:background="@color/light_gray_background_color">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_date"/>

            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

            <TextView
                    android:id="@+id/item_registered_cases_tv_reg_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="28.8dp"
                android:paddingRight="28.8dp"
                android:background="@color/light_gray_background_color">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"/>

            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

            <TextView
                    android:id="@+id/item_registered_cases_tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
