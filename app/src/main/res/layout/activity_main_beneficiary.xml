<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main_rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".domains.main.MainActivity"
        android:background="@android:color/white">

    <include android:id="@+id/activity_main_actionbar" layout="@layout/layout_actionbar"/>

    <TextView
            android:id="@+id/activity_main_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAIDI"
            android:textSize="30dp"
            android:layout_marginTop="58.9dp"
            android:textColor="@color/dark_blue"
            android:layout_centerHorizontal="true"
            fontPath="fonts/NunitoSans-Bold.ttf"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="85.2dp"
            android:orientation="vertical"
            android:layout_below="@+id/activity_main_tv_title"
    >

        <LinearLayout android:layout_width="match_parent" android:layout_height="126.7dp">

            <FrameLayout
                    android:id="@+id/activity_main_fl_child_registration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_gray_gray_stroke_selector"
                    android:padding="12.5dp"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/child_registration"
                        android:textSize="15.4dp"
                        android:textColor="@color/dark_blue"
                        android:gravity="center"
                        fontPath="fonts/NunitoSans-Bold.ttf"/>
            </FrameLayout>

            <View android:layout_width="14.4dp" android:layout_height="match_parent"/>

            <FrameLayout
                    android:id="@+id/activity_main_fl_immunization_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_gray_gray_stroke_selector"
                    android:padding="12.5dp"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/immunization_card"
                        android:textSize="15.4dp"
                        android:textColor="@color/dark_blue"
                        android:gravity="center"
                        fontPath="fonts/NunitoSans-Bold.ttf"/>
            </FrameLayout>


        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="48dp"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/fragment_login_main_btn_login"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="5dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_blue_selector"
                    fontPath="fonts/NunitoSans-Bold.ttf"
            />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>