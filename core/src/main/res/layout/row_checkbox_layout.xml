<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical">

    <TextView
            android:id="@+id/row_checkbox_tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15.4dp"
            android:textColor="@android:color/black"/>

    <View android:layout_width="10dp" android:layout_height="match_parent"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <CheckBox
                android:id="@+id/row_checkbox_cb_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View android:layout_width="9.6dp" android:layout_height="match_parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textColor="@android:color/black"/>

    </LinearLayout>

</LinearLayout>